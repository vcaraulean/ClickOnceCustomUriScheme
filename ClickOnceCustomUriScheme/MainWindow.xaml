<Window x:Class="ClickOnceCustomUriScheme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickOnceCustomUriScheme"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type=local:MainWindowViewModel}"
        Title="MainWindow" Height="400" Width="600"
        FontSize="16"
        Icon="app.ico">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{Binding ApplicationVersion, Mode=OneTime, StringFormat='{}Application version: {0}' }" Margin="10"/>
            <TextBox AcceptsReturn="True" Height="200" VerticalContentAlignment="Top"
                     Text="{Binding Arguments}"/>
        </StackPanel>
    </Grid>
</Window>
